{
  "name": "PerfectRed",
  "version": "0.0.2",
  "main": "electron/main.js",
  "scripts": {
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "rebuild:node": "npm rebuild better-sqlite3",
    "start": "npm run rebuild:node && node server.js",
    "devStart": "npm run rebuild:node && nodemon server.js",
    "electron:start": "npm run rebuild:electron && electron .",
    "fullstack": "npm run electron:start",
    "build": "electron-builder --mac",
    "devstack": "npm run rebuild:electron && electronmon ."
  },
  "build": {
    "appId": "com.perfectred.app",
    "productName": "PerfectRed",
    "mac": {
      "icon": "public/favicon.icns",
      "category": "public.app-category.productivity"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.0",
    "connect-sqlite3": "^0.9.16",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "electron": "^38.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "install": "^0.13.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "serve-favicon": "^2.5.1",
    "session-file-store": "^1.5.0"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.3",
    "nodemon": "^3.1.10"
  }
}
